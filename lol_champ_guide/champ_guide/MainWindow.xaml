<Window x:Class="champ_guide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:champ_guide.ViewModel"
        xmlns:vw="clr-namespace:champ_guide.View"
        xmlns:wtf="clr-namespace:champ_guide.ViewModel"
        Title="MainWindow" Height="600" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ChampionDetailViewModel}">
            <vw:ChampionListView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ChampionDetailViewModel}">
            <vw:ChampionDetailView />
        </DataTemplate>
    </Window.Resources>
    
    <TabControl>
        <TabItem Header="Main Panel">
            <Grid>
                <Border Margin="4" Background="White" BorderBrush="Black" BorderThickness="1">
                    <ItemsControl ItemsSource="{Binding ViewModels}" Margin="4" />
                </Border>
            </Grid>
        </TabItem>
        <TabItem Header="Alternate Panel">
            <Grid>
                <ItemsControl ItemsSource="{Binding ChampionDetailViewModelInstance}"></ItemsControl>
            </Grid>
        </TabItem>
        <TabItem Header="Tree view test">
            <TreeView ItemsSource="{Binding TreeViewSource}">
                
            </TreeView>
        </TabItem>
    </TabControl>
</Window>
